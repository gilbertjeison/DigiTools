@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta charset="UTF-8">
    <title>Cuenta creada correctamente</title>

    <!-- Favicon-->
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="~/Content/google_fonts/font.css" rel="stylesheet" type="text/css">
    <link href="~/Content/material_icons/material_icons.css" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/Scripts/plugins/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Scripts/plugins/animate-css/animate.min.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Content/Adminbsb/style.css" rel="stylesheet" />
</head>
<body class="login-page">

    <div class="login-box">
        <div class="logo">
            <a style="align-content:center;"><b>@User.Identity.Name <br /></b></a>
            <small>Bienvenido</small>
        </div>
        <div class="card">
            <div class="body">
                <div class="msg">Usuario creado correctamente</div>
                <div>
                    <p>
                        Gracias por registrarse, su perfil está pendiente de aprobación, una vez aprobado puede iniciar sesión. Revise su correo para mayor información.
                    </p>
                    <div>
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <button class="btn btn-block bg-pink waves-effect" href="javascript:document.getElementById('logoutForm').submit()">CERRAR</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
